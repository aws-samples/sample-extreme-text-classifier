# AWS Configuration for Multi-Class Text Classifier
AWS_BEDROCK_REGION=us-west-2

# Model Configuration
AWS_NOVA_LITE_MODEL=us.amazon.nova-lite-v1:0
AWS_NOVA_PRO_MODEL=us.amazon.nova-pro-v1:0
AWS_CLAUDE_SONNET_4_MODEL=us.anthropic.claude-sonnet-4-20250514-v1:0

# AWS Retry Configuration
AWS_RETRY_MAX_ATTEMPTS=10
AWS_RETRY_MODE=standard
AWS_READ_TIMEOUT=180
AWS_CONNECT_TIMEOUT=15
AWS_MAX_POOL_CONNECTIONS=5

# Reranking Configuration
RERANKING_MAX_RETRIES=3
RERANKING_BASE_DELAY=1.0
RERANKING_READ_TIMEOUT=30
RERANKING_CONNECT_TIMEOUT=10

# Attribute Generation Configuration
ATTR_GEN_MAX_RETRIES=3
ATTR_GEN_RETRY_DELAY=5
ATTR_GEN_CLASS_DELAY=3

# PDF Extraction Configuration
PDF_MODEL_ID=us.amazon.nova-lite-v1:0
PDF_AWS_REGION=us-west-2
PDF_MAX_TOKENS=4000
PDF_TEMPERATURE=0.1
PDF_TOP_P=0.9
PDF_MAX_IMAGE_SIZE=1024
PDF_IMAGE_QUALITY=85
PDF_MIN_IMAGE_SIZE=50
PDF_MAX_IMAGES_PER_PAGE=10
PDF_MAX_TOTAL_IMAGES=50
PDF_READ_TIMEOUT=60
PDF_CONNECT_TIMEOUT=10
PDF_DEFAULT_CONFIDENCE=0.8

# Dataset Generation Configuration
DATASET_MODEL_ID=us.amazon.nova-lite-v1:0
DATASET_MAX_TOKENS=4000
DATASET_DEFAULT_NUM_CLASSES=50
DATASET_JSON_INDENT=2

# Similarity Search Configuration
SIMILARITY_DEFAULT_TOP_K=5
SIMILARITY_ZERO_NORM_EPSILON=1e-8

# Validation Configuration
VALIDATION_DEFAULT_PASS_SCORE=1.0
VALIDATION_DEFAULT_FAIL_SCORE=0.0
VALIDATION_FALLBACK_RERANK_SCORE=0.1